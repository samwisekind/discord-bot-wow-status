{
  "name": "discord-bot-wow-status",
  "version": "1.0.3",
  "description": "Node/TypeScript server for a Discord bot relating to World of Warcraft",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index",
    "build": "tsc --build tsconfig.build.json",
    "test": "npm run test:eslint && npm run test:typescript && npm run test:unit",
    "test:eslint": "eslint src/",
    "test:typescript": "tsc",
    "test:typescript:watch": "tsc --watch",
    "test:unit": "jest .*.spec.ts --verbose",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:unit:watch": "npm run test:unit:coverage -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flamov/discord-bot-wow-status.git"
  },
  "keywords": [
    "node",
    "typescript",
    "discord",
    "bot",
    "world-of-warcraft"
  ],
  "author": "Flamov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Flamov/discord-bot-wow-status/issues"
  },
  "homepage": "https://github.com/Flamov/discord-bot-wow-status#readme",
  "dependencies": {
    "node-cron": "^2.0.3",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.19",
    "@types/node-cron": "^2.0.3",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "fetch-mock": "^9.11.0",
    "jest": "^26.6.3",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "globals": {
      "fetch": true
    },
    "rules": {
      "no-console": 0
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
